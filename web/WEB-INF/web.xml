<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>OtakuShopWeb2</display-name>

    <!-- Welcome file (pÃ¡gina por defecto) -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Servlet: LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.otakushop.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Servlet: AgregarProductoServlet -->
    <servlet>
        <servlet-name>AgregarProductoServlet</servlet-name>
        <servlet-class>com.otakushop.servlets.AgregarProductoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AgregarProductoServlet</servlet-name>
        <url-pattern>/AgregarProductoServlet</url-pattern>
    </servlet-mapping>

    <!-- (Opcional) Session timeout en minutos -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
